<h1>Editing Book</h1>
<% if @book.errors.any? %>
<div class="error">
 <h4 class="error-count"><%= @book.errors.count %>errors prohibited this book from being saved:</h4>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li>
      <%=message %>
    </li>
    <% end %>
</ul>
</div>
<% end %>
<%= form_with model:@book, url:book_path(@book.id),method: :patch do |f| %>
<div class="field">
<lable for="book-title">Title</lable>
<div class="text"><%=f.text_field:title %></div></div>
<div class="field">
<label for="book-body">Body</label>
<div class="text"><%= f.text_area:body %></div>
<div class="text"><%=f.submit 'Update Book' %></div></div>
<span class="link"><%= link_to "Show",book_path(@book.id) %></span>
<span class="link_to"><%= link_to "Back",books_path %></span>
<%  end %>
