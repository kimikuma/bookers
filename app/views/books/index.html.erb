<h1>Books</h1>
<table>
<tr>
  <th>Title</th>
  <th>Body</th>
</tr>
<% @books.each do |book| %>
<tr>
  <td><%= book.title %></td>
  <td><%=book.body %></td>
<td><%= link_to "Show",book_path(book.id) %></td>
<td><%= link_to "Edit",edit_book_path(book.id) %></td>
<td><%= link_to "Destroy", book_path(book.id),method: :delete,"date-confirm"=>"Are you Ok?" %></td>
</tr>
<% end %>
</table>


<h2>New book</h2>
<% if @book.errors.any? %>
<div class="error">
 <h4 class="error-count"><%= @book.errors.count %>errors prohibited this book from being saved:</h4>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li>
      <%=message %>
    </li>
  <% end %>
 </ul>
</div>
<% end %>
<%= form_with model:@book do |f| %>
<div class="field">
<label for="book-title">Title</label>
<div class="text"><%= f.text_field :title %></div></div>
<div class="field">
<label for="book-body">Body</label>
<div class="text"><%= f.text_area :body %></div></div>
<div class="text"><%=f.submit 'Create Book' %></div>
<% end %>

